<!--pages/banjikaoqin/banjikaoqin.wxml-->
<view class="table">
  <view class="tr bg-w">
  <view class="th ">学生号</view>
    <view class="th">课程号</view>
    <view class="th">时间</view>
    <view class="th ">状态</view>
    <!-- <view class="th ">到寝情况</view> -->
  </view>
  <block wx:for="{{result}}" wx:key="{{code}}">
    <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
    <view class="td">{{item.student_number}}</view>
      <view class="td">{{item.playcard_id}}</view>
      <view class="td">{{item.playcard_time}}</view>
      <view class="td">{{item.playcard_type}}</view>
      <!-- <view class="td">{{item.type}}</view> -->
    </view>
        <view class="tr" wx:else>
        <view class="td">{{item.student_number}}</view>
      <view class="td">{{item.playcard_id}}</view>
      <view class="td">{{item.playcard_time}}</view>
      <view class="td">{{item.playcard_type}}</view>
      <!-- <view class="td">{{item.type}}</view> -->
    </view>
  </block>
</view>